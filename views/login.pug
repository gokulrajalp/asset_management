html
  head
    title Asset Management System
    style
      include ../Bootstrap/css/bootstrap.min.css
      include ../Bootstrap/css/custom.css
    script
      include ../Bootstrap/js/bootstrap.bundle.min.js
      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css")
      link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet')
      link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css')
      link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/js/bootstrap.bundle.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js')
  body
    .login-page.bg-light
      .container
        .row
          .col-lg-10.offset-lg-1
            .bg-white.shadow.rounded
              .row
                .col-md-7.pe-0
                  .form-left.h-100.py-5.px-5
                    form.m-4(action="/login", method="post")
                            .col.mb-4
                              label.form-label(for='validationDefaultUsername') Username
                              .input-group
                                span#inputGroupPrepend2.input-group-text @
                                input#validationDefaultUsername.form-control(type='text' name="username" aria-describedby='inputGroupPrepend2' required='')
                            .col
                              label.form-label(for='validationDefaultUsername') Password
                              .input-group
                                span#inputGroupPrepend2.input-group-text **
                                input#validationDefaultUsername.form-control(type='password' name="password" aria-describedby='inputGroupPrepend2' required='')
                            .my-3
                              span #{error}
                            .col.mt-4
                              button.btn.btn-primary(type='submit') Login
                .col-md-5.ps-0.d-none.d-md-block
                  .form-right.h-100.bg-primary.text-white.text-center.pt-5
                    i.bi.bi-bootstrap
                    h2.fs-1 Welcome Back!!!
                    br
                    br
                    h1.fs-2.text-dark Asset
                    h1.fs-3.text-dark Management System

