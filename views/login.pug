// views/login.pug
doctype html
html
  head
    title Login
  body
    h1 Login
    form(action='/login', method='post')
      label(for='username') Username:
      input(type='text', name='username', required=true)
      br
      label(for='password') Password:
      input(type='password', name='password', required=true)
      br
      button(type='submit') Login
