// views/login.jade
html
  head
    title Login
  body
    h1 Login
    if error
      p.error= error
    form(action="/login", method="post")
      label(for="username") Username:
      input(type="text", name="username", required)
      br
      label(for="password") Password:
      input(type="password", name="password", required)
      br
      button(type="submit") Login
