extends layout

block content
    .container.mt-5
        h1 Add Asset

        form(action='/asset/add', method='POST')
            .mb-3
                label(for='serialNumber', class='form-label') Serial Number:
                input(type='text', name='serialNumber', class='form-control', required=true)

            .mb-3
                label(for='make', class='form-label') Make:
                input(type='text', name='make', class='form-control', required=true)

            .mb-3
                label(for='model', class='form-label') Model:
                input(type='text', name='model', class='form-control', required=true)

            .mb-3
                label(for='purchaseDate', class='form-label') Purchase Date:
                input(type='date', name='issueDate', class='form-control', required=true)

            .mb-3
                label(for='assetCategoryId', class='form-label') Asset Category:
                select(name='assetCategoryId', class='form-select')
                    each assetCategory in assetCategories
                        option(value=assetCategory.id)= assetCategory.name

            .mt-3
                button.btn.btn-primary(type='submit') Add Asset
